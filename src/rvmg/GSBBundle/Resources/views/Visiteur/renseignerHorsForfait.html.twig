{% extends "rvmgGSBBundle:Default:baseVisiteur.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-5">
                    {{form_start(form)}}
                    {{form_row(form.libelle)}}
                    {{form_row(form.montant)}}
                    {{form_row(form.datedepense)}}
                    <input type="submit" value="Valider" class="btn btn-success" />
                    <a href="{{ path('rvmg_gsb_annuler_horsforfait',{'id':idLigne}) }}" class="btn btn-danger">Annuler</a>
                    {{form_end(form)}}
                </div>
                <div class="col-lg-2"></div>
                <div class="col-lg-5">
                    <table class="table">
                        <thead>
                            <tr>
                                <td>Libellé</td>
                                <td>Montant</td>
                                <td>Date dépense</td>
                            </tr>
                        </thead>
                        {%for ligne in lignesFraisHorsForfait%}
                        <tbody>
                            <tr>
                                <td>{{ligne.libelle}}</td>
                                <td>{{ligne.montant}}</td>
                                <td>{{ligne.datedepense|date('d-m-Y')}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>        
                </div>
            </div>
        </div>
    </div>    
    {# Revenir à la page précédente en javascript #}
    <div class="text-center">
        <a href="" onClick="javascript:window.history.go(-1)"><button type="submit" class="btn btn-primary">Retour</button></a>                       
    </div> 
    
{% endblock %}