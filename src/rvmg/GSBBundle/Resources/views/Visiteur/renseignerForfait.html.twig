{% extends "rvmgGSBBundle:Default:baseVisiteur.html.twig" %}

{% block body %}
    
    <form action="{{ path('rvmg_gsb_renseigner',{'type':'forfait'}) }}" method="post">
    <div class="containerForfait">
            
        {# Tableau des Frais Forfait #}
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                <div class="text-center margin-bottom-40 titreFicheFrais">Fiche Frais - Forfait</div>
                
                <div class="row">
                    {% for unFrais in frais %}
                        {% if loop.index == 1 %}
                            <div class="col-lg-6 col-sm-6 col-md-6 col-xs-6 margin-bottom-20 champFicheFrais">
                                <input type="hidden" name="libETP">
                                {{ unFrais.libelle }}
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20 text-right">
                                Quantité
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20">
                                <input class="number" name="ETP" size="10px">                        
                            </div>
                        {% endif %}
                        {% if loop.index == 2 %}
                            <div class="col-lg-6 col-sm-6 col-md-6 col-xs-6 margin-bottom-20 champFicheFrais">
                                <input type="hidden" name="libKM">
                                {{ unFrais.libelle }}
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20 text-right">
                                Quantité
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20">
                                <input class="number" name="KM" size="10px">                        
                            </div>
                        {% endif %}
                        {% if loop.index == 3 %}
                            <div class="col-lg-6 col-sm-6 col-md-6 col-xs-6 margin-bottom-20 champFicheFrais">
                                <input type="hidden" name="libNUI">
                                {{ unFrais.libelle }}
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20 text-right">
                                Quantité
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20">
                                <input class="number" name="NUI" size="10px">                        
                            </div>
                        {% endif %}
                        {% if loop.index == 4 %}
                            <div class="col-lg-6 col-sm-6 col-md-6 col-xs-6 margin-bottom-20 champFicheFrais">
                                <input type="hidden" name="libREP">
                                {{ unFrais.libelle }}
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20 text-right">
                                Quantité
                            </div>
                            <div class="col-lg-3 col-sm-3 col-md-3 col-xs-3 margin-bottom-20">
                                <input class="number" name="REP" size="10px">                        
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="text-center">
                    <button class="btn btn-success" type="submit">Valider</button>
                    <button class="btn btn-danger" type="reset">Annuler</button>
                </div>
            </div>
        </div>
        
    </div>
    </form>
    
    {# Revenir à la page précédente en javascript #}
    <div class="text-center">
        <a href="" onClick="javascript:window.history.go(-1)"><button type="submit" class="btn btn-primary">Retour</button></a>                       
    </div>                
{% endblock %}