{% extends "rvmgGSBBundle:Default:baseVisiteur.html.twig" %}
{% block title %}
    Consulter une fiche de frais
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-4"></div>
            <div class="col-lg-2">
                {{form_start(form)}}
                {{form_widget(form.visitor, { 'attr': {'class': 'hidden'} })}}
                {{form_widget(form.month, {'date_pattern': '<span style="display: none;">{{ day }}</span> {{ month }} {{ year }}'})}}
                
            </div>
            <div class="col-lg-2">
                <input type="submit" value="Valider" class="btn btn-success" />
                <input type="reset" value="Annuler" class="btn btn-danger" />
                {{form_end(form)}}
            </div>
        </div>
    </div>
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-info">
            {% for msg in app.session.flashBag.get('error') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
