{% extends "rvmgGSBBundle:Default:baseComptable.html.twig" %}
{% block title %}
    Mettre en paiement
{% endblock %}
{% block body %}

   {% set fichefrais = null %}
    <table class="table-responsive table-hover table-bordered" >
        {# foreach occurence in tableForfait#}
        {% for list in tableForfait %}
            <thead>
                <tr>
                    <th>{{ list.name }}</th>{# #}
                </tr>
                {% if list.type == "forfait" %}
                    <tr>
                        <th>Forfait</th>
                        <th>Quantité</th>
                    </tr>
                {% elseif list.type == "horsforfait" %}
                    <tr>
                        <th>Libellé</th>
                        <th>Date dépense</th>
                        <th>Montant</th>
                    </tr>
                {% endif %}
            </thead>
            <tbody>
                {% for frais in list.listForfait %}
                    {% if list.type == "forfait" %}
                        <tr>
                            <td>{{frais.idFraisforfait}}</td>
                            <td>{{frais.quantite}}</td>
                        </tr>

                        {% set fichefrais = frais.idFichefrais.idFichefrais %}
                    {% endif %}
                    {% if list.type == "horsforfait" %}
                        <tr>
                            <td>{{frais.libelle}}</td>
                            <td>{{frais.dateDepense|date('d/m/y')}}</td>
                            <td>{{frais.montant}}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </tbody>
        {% endfor %}
    </table>
    <a href="{{ path('rvmg_gsb_follow',{'fichefrais':fichefrais}) }}"
       class="btn btn-success">PAIEMENT</a>
{% endblock %}